{
  "name": "attendance-platform",
  "private": true,
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "npm run start:dev -w @campus/scrapper & npm run start:dev -w @campus/professors & npm run start:dev -w @campus/api",
    "prod": "docker-compose -f docker-compose.yml up",
